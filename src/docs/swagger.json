{
  "openapi": "3.0.0",
  "info": {
    "title": "Jogging tracker API",
    "description": "An API documentation for Jogging tracker app",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "local server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "authentication methods"
    }
  ],
  "paths": {
    "/api/v1/signup": {
      "post": {
        "summary": "Registeration to website",
        "tags": ["Authentication"],
        "description": "Allow user to create new account using email",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "fullname": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "successfully created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number",
                      "description": "status code"
                    },
                    "message": {
                      "type": "string",
                      "description": "message to inform user that he registered successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number",
                      "description": "status code"
                    },
                    "message": {
                      "type": "string",
                      "description": "define where is the error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}